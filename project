choices=['Science','Arts','Commerce']
stream_label=tkinter.Label(root,text="select stream")
stream_label.pack(anchor=tkinter.W,padx=25,pady=10)
stream_dropdown=ttk.Combobox(root,values=choices)
stream_dropdown.pack(anchor=tkinter.W,padx=25,pady=10)

degree_label=ttk.Label(root,text="select degree")
degree_label.pack(anchor=tkinter.W,padx=25,pady=10)
degree_dropdown=ttk.Combobox(root)
degree_dropdown.pack(anchor=tkinter.W,padx=25,pady=10)

def select_stream():
    selected_stream=stream_dropdown.get()
    if selected_stream=="science":
        degree_dropdown['value']=['medical','engineering']
    elif selected_stream=="Commerce":
        degree_dropdown==['BBA', 'BAF','BCCA','BBI']
    elif selected_stream=="Arts":
        degree_dropdown=['Interior design','Graphics design','Animation','BFA']
    else:
        degree_dropdown=[]
    degree_dropdown.set('')






              
if stream_dropdown=="science":
    choicestwo=['medical','engineering']
    degree_label=ttk.Label(root,text="select degree")
    degree_label.pack(anchor=tkinter.W,padx=25,pady=10)
    degree_dropdown=ttk.Combobox(root,values=choicestwo)
    degree_dropdown.pack(anchor=tkinter.W,padx=25,pady=10)

elif stream_dropdown=="Arts":
    choicesthree=['Interior design','Graphics design','Animation','BFA']
    degree_label=ttk.Label(root,text="select degree")
    degree_label.pack(anchor=tkinter.W,padx=25)
    degree_dropdown=ttk.Combobox(root,values=choicesthree)
    degree_dropdown.pack(anchor=tkinter.W,padx=25)
    
    
Showcollege_button=tkinter.Button(root,text="Show Colleges",command=OnClick_Showcolleges)
Showcollege_button.pack(anchor=tkinter.W,padx=25,pady=10)
root.mainloop()