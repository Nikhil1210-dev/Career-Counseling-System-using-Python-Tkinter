import tkinter
root=tkinter.Tk()
from tkinter import messagebox,ttk
root.geometry("300x400")
root.configure(bg="#ADD8E6")


#import openpyxl
#from openpyxl import load_workbook

#root=tkinter.Tk()
#file_path=r""

root.title("Carrier Conselling")
head_label=tkinter.Label(root,text="Career conselling")
head_label.pack(anchor=tkinter.W,padx=25,pady=10)
name_label=tkinter.Label(root,text="enter")
name_label.pack(anchor=tkinter.W,padx=25,pady=10)
name_textbox=tkinter.Entry(root)
name_textbox.pack(anchor=tkinter.W,padx=25,pady=10)

def OnClick_Showcolleges():
    stream=stream_dropdown.get()
    degree=degree_dropdown.get()
    if stream and degree:
        messagebox.showinfo("status","data received")
    else:
        messagebox.showwarning("Warning","field left blank")
        
        
